<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.Main.MyCenter.MycenterActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".Activity.Main.MycenterFragment">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/MyCradBack"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.2"
                    app:srcCompat="?attr/homeAsUpIndicator" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text="@string/my_center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/MyCradShar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    app:srcCompat="?attr/actionModeShareDrawable" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/MyING"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:visibility="gone">

                <ProgressBar

                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminateTint="#03A9F4" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/app_ing_1" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:paddingTop="4dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/MyCardTo"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="40dp"
                        android:background="@drawable/box_border_selector"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/MyIco"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/avatar"
                            app:srcCompat="@drawable/avatar_default" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="2.5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/my_center_name"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1.5"
                                android:gravity="bottom"
                                android:text="@string/dome_name"
                                android:textColor="#2196F3"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/MyTime"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="@string/dome_regtime"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/verified"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/box_border_selector"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <ImageView

                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/ico"
                            app:srcCompat="@android:drawable/ic_menu_my_calendar" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:text="@string/verified"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/UpMydate"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/box_border_selector"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <ImageView

                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/ico"
                            app:srcCompat="@android:drawable/ic_menu_edit" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:text="@string/my_center_edit"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Manger"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/box_border_selector"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <ImageView

                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/ico"
                            app:srcCompat="@android:drawable/ic_menu_preferences" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:text="@string/app_admin"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/UpMyPass"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/box_border_selector"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <ImageView

                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/ico"
                            app:srcCompat="@android:drawable/ic_menu_help" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:text="@string/edit_password"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ClenData"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/box_border_selector"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <ImageView

                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/ico"
                            app:srcCompat="@android:drawable/ic_menu_delete" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:text="@string/my_cleanroom"
                            android:textSize="18sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/AboutThis"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/box_border_selector"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <ImageView

                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/ico"
                            app:srcCompat="@android:drawable/ic_menu_info_details" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:text="@string/login_about"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/EndLogin"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/box_border_selector"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_weight="4"
                            android:background="#C6FF1200"
                            android:gravity="center|center_vertical"
                            android:text="@string/outlogin"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</layout>