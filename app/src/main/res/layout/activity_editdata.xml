<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.Main.MyCenter.EditdataActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#03A9F4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/reg_return"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginStart="15dp"
                android:contentDescription="@string/bk"
                android:tint="#FFFFFF"
                app:srcCompat="@drawable/ic_keyboard_arrow_left"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/UpDataTile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/edit_title"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reg_ing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/working"
                android:textColor="#00BCD4" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <!--姓名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/box_border_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/name"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:autofillHints=""
                        android:background="@android:drawable/editbox_background_normal"
                        android:ems="10"
                        android:hint="@string/hint_reg_name"
                        android:inputType="textPersonName" />
                </LinearLayout>
                <!--                性别-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/box_border_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/peo_gender"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/edit_gender"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:background="@android:drawable/editbox_background_normal"
                        android:entries="@array/gender" />

                </LinearLayout>
                <!--电子邮件-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/box_border_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/Email"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_Email"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:autofillHints=""
                        android:background="@android:drawable/editbox_background_normal"
                        android:ems="10"
                        android:hint="@string/hint_reg_Email"
                        android:inputType="textEmailAddress" />
                </LinearLayout>
                <!--电话-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/box_border_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/phone"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_phone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:autofillHints=""
                        android:background="@android:drawable/editbox_background_normal"
                        android:ems="10"
                        android:hint="@string/hint_edit_phone"
                        android:inputType="phone" />
                </LinearLayout>
                <!--            QQ-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/box_border_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/peo_QQ"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_QQ"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:autofillHints=""
                        android:background="@android:drawable/editbox_background_normal"
                        android:ems="10"
                        android:hint="@string/hint_edit_qq"
                        android:inputType="phone"
                        tools:ignore="LabelFor" />
                </LinearLayout>
                <!--            生日-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/box_border_selector"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:orientation="horizontal"
                        tools:ignore="UselessParent">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/peo_birthday"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/edi_birthday_ok"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="3"
                            android:background="@android:drawable/editbox_background_normal"
                            android:ems="10"
                            android:gravity="center"
                            android:text="@string/edit_birthday"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <DatePicker
                        android:id="@+id/edi_birthday"
                        android:theme="@android:style/Theme.Holo.Light"
                        android:calendarViewShown="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>
                <!--            校区-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/box_border_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/peo_campus"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/edit_campus"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:background="@android:drawable/editbox_background_normal"
                        android:entries="@array/campus" />

                </LinearLayout>
                <!--            学院-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/box_border_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/peo_college"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/edit_college"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:background="@android:drawable/editbox_background_normal"
                        android:entries="@array/college" />

                </LinearLayout>
                <!--            班级-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/box_border_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/peo_class"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_class"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:autofillHints=""
                        android:background="@android:drawable/editbox_background_normal"
                        android:ems="10"
                        android:hint="@string/hint_edit_class"
                        android:inputType="text" />
                </LinearLayout>
                <!--            宿舍-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/box_border_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/peo_house"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_house"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:autofillHints=""
                        android:background="@android:drawable/editbox_background_normal"
                        android:ems="10"
                        android:hint="@string/hint_edit_house"
                        android:inputType="phone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/box_border_selector">

                    <Button
                        android:id="@+id/edit_ok"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="75dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="75dp"
                        android:layout_marginBottom="50dp"
                        android:text="@string/save"
                        android:textColor="#2196F3"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>